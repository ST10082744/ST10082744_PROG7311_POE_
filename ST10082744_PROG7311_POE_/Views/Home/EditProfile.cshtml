@model ST10082744_PROG7311_POE_.Areas.Identity.Data.ST10082744_PROG7311_POE_User

@{
    ViewData["Title"] = "Edit Profile";
}
<style>
    body {
        background-color: #ccffe6;
    }

    .btn-gradient-green {
        background: linear-gradient(to top, #004d00, #00cc00);
        color: #fff;
        border: none;
    }

        .btn-gradient-green:hover {
            background: linear-gradient(to top, #004d00, #00cc00);
            color: #fff;
        }

    .form-control {
        width: 200px; 
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-container {
        margin-top: 20px;
        text-align: center;
    }

    .btn-spacing {
        margin-bottom: 20px; 
    }
</style>
<h2>Edit Profile</h2>

<div class="form-container">
    <form asp-action="EditProfile" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="btn-container btn-spacing">
            <button type="submit" class="btn btn-gradient-green">Save</button>
        </div>
    </form>
    <div class="btn-container">
        <a asp-action="EmployeeZone" class="btn btn-gradient-green">Back to List</a>
    </div>
</div>
