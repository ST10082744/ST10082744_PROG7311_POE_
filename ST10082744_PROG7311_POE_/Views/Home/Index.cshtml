@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ccffe6;
        }

        .button-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

        .button-block {
            margin: 10px;
            width: 250px;
            height: 200px;
        }

        .medium-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            width: 100%;
            height: 100%;
            padding: 15px;
            text-align: center;
            background: linear-gradient(to top, #004d00, #00cc00);
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Welcome to our Platform</h1>
        <p>Select one of the following blocks below Or</p>
        <p>The top of the navigation bar gives you access to add products and view your list of products</p>
    </div>
    <div class="button-container">
        <div class="button-block">
            <a href="#" class="medium-button">Sustainable Farming Hub</a>
        </div>
        <div class="button-block">
            <a href="#" class="medium-button">Green Energy Marketplace</a>
        </div>
        <div class="button-block">
            <a href="#" class="medium-button">Educational and Training Resources</a>
        </div>
        <div class="button-block">
            <a href="#" class="medium-button">Project Collaboration and Funding Opportunities</a>
        </div>
    </div>
</body>
